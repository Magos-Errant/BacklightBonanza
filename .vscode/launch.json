    "version": "0.2.0",
    "configurations": [
        {
            "name": "Controller",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/polychromatic-controller",
            "args": [
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "POLYCHROMATIC_DEV_CFG": "true",
            },
        },
        {
            "name": "Tray Applet",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/polychromatic-tray-applet",
            "args": [
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "POLYCHROMATIC_DEV_CFG": "true",
            },
        },
        {
            "name": "CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/polychromatic-cli",
            "args": [
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "POLYCHROMATIC_DEV_CFG": "true",
            },
        }
    ]
}
